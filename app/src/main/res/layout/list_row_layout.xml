<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_row_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/list_row_layout_image_rectangle"
        android:layout_height="75dp"
        android:layout_width="match_parent"
        android:src="@drawable/rectangle"
        />

    <TextView
        android:id="@+id/list_row_layout_text_time"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="-190dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@id/list_row_layout_image_rectangle"
        android:textColor="#000000"
        android:textSize="16dp"></TextView>

    <ImageView
        android:id="@+id/list_row_layout_image_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/list_row_layout_image_rectangle"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="-50dp"
        android:src="@drawable/ic_comment_black_48px"
        android:visibility="invisible"/>

</RelativeLayout>